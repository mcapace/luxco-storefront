[
  {
    "name": "theme_info",
    "theme_name": "Luxco Yellowstone",
    "theme_version": "1.0.0",
    "theme_author": "Luxco",
    "theme_documentation_url": "",
    "theme_support_url": ""
  },
  {
    "name": "Logo & Branding",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 150,
        "unit": "px",
        "label": "Logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#1a1a1a"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary color (Gold)",
        "default": "#c9a227"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent color",
        "default": "#8b5a2b"
      },
      {
        "type": "header",
        "content": "Background Colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_background_secondary",
        "label": "Secondary background",
        "default": "#f8f6f2"
      },
      {
        "type": "header",
        "content": "Text Colors"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text",
        "default": "#1a1a1a"
      },
      {
        "type": "color",
        "id": "color_text_secondary",
        "label": "Secondary text",
        "default": "#666666"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading font",
        "default": "cinzel_n5"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body font",
        "default": "lato_n4"
      },
      {
        "type": "range",
        "id": "font_body_scale",
        "min": 90,
        "max": 130,
        "step": 5,
        "default": 100,
        "unit": "%",
        "label": "Body font size scale"
      }
    ]
  },
  {
    "name": "Age Verification",
    "settings": [
      {
        "type": "checkbox",
        "id": "age_verification_enabled",
        "label": "Enable age verification",
        "default": true
      },
      {
        "type": "text",
        "id": "age_verification_title",
        "label": "Title",
        "default": "Age Verification Required"
      },
      {
        "type": "textarea",
        "id": "age_verification_message",
        "label": "Message",
        "default": "You must be 21 years or older to enter this site. Please confirm your age to continue."
      },
      {
        "type": "text",
        "id": "age_verification_confirm",
        "label": "Confirm button text",
        "default": "I am 21 or older"
      },
      {
        "type": "text",
        "id": "age_verification_deny",
        "label": "Deny button text",
        "default": "I am under 21"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "url",
        "id": "social_facebook_link",
        "label": "Facebook"
      },
      {
        "type": "url",
        "id": "social_instagram_link",
        "label": "Instagram"
      },
      {
        "type": "url",
        "id": "social_twitter_link",
        "label": "Twitter/X"
      },
      {
        "type": "url",
        "id": "social_youtube_link",
        "label": "YouTube"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "label": "Enable cart note",
        "default": true
      }
    ]
  }
]
