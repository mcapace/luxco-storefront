  "name": "Product Template",
  "tag": "section",
  "class": "product-template-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sku",
      "label": "Show SKU",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Product Template"
    }
  ]
}
{% endschema %}
