{%- style -%}
  .about-distillery {
    padding: var(--spacing-xxl) 0;
    background-color: var(--color-bg-dark);
    color: var(--color-cream);
  }

  .about-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xxl);
    align-items: center;
  }

  .about-image {
    position: relative;
  }

  .about-image img {
    width: 100%;
    height: auto;
  }

  .about-image-accent {
    position: absolute;
    top: -20px;
    left: -20px;
    width: 100px;
    height: 100px;
    border: 2px solid var(--color-gold);
    z-index: -1;
  }

  .about-content {
    padding: var(--spacing-lg);
  }

  .about-eyebrow {
    font-family: var(--font-heading);
    font-size: var(--font-size-sm);
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .about-title {
    font-size: var(--font-size-3xl);
    color: var(--color-cream);
    margin-bottom: var(--spacing-md);
  }

  .about-divider {
    width: 60px;
    height: 2px;
    background-color: var(--color-gold);
    margin-bottom: var(--spacing-lg);
  }

  .about-text {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--spacing-lg);
  }

  .about-features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .about-feature {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
  }

  .about-feature-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    color: var(--color-gold);
  }

  .about-feature-text {
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.9);
  }

  .about-cta .btn {
    margin-right: var(--spacing-md);
  }

  @media (max-width: 992px) {
    .about-container {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .about-image {
      order: -1;
    }

    .about-features {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<section class="about-distillery" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="about-container">
      <div class="about-image">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 800 | image_tag:
            loading: 'lazy',
            sizes: '(max-width: 992px) 100vw, 50vw',
            widths: '375, 550, 750, 800',
            alt: section.settings.title
          }}
        {%- else -%}
          <div style="aspect-ratio: 4/3; background: linear-gradient(135deg, #3d2914 0%, #1a1a1a 100%);"></div>
        {%- endif -%}
        <div class="about-image-accent"></div>
      </div>

      <div class="about-content">
        {%- if section.settings.eyebrow != blank -%}
          <p class="about-eyebrow">{{ section.settings.eyebrow }}</p>
        {%- endif -%}

        <h2 class="about-title">{{ section.settings.title }}</h2>
        <div class="about-divider"></div>

        <div class="about-text">
          {{ section.settings.text }}
        </div>

        {%- if section.blocks.size > 0 -%}
          <div class="about-features">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'feature' -%}
                  <div class="about-feature" {{ block.shopify_attributes }}>
                    <svg class="about-feature-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="about-feature-text">{{ block.settings.text }}</span>
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        {%- endif -%}

        <div class="about-cta">
          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="btn btn-primary">
              {{ section.settings.button_label }}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Distillery",
  "tag": "section",
  "class": "about-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "Our Heritage"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "A Legacy of Excellence"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Founded on generations of Kentucky bourbon tradition, our distillery combines time-honored techniques with innovative craftsmanship. Every bottle we produce tells a story of dedication, patience, and an unwavering commitment to quality.</p><p>From the limestone-filtered water to the hand-selected grains, each element is carefully chosen to create exceptional spirits worthy of the Yellowstone name.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn Our Story"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Hand-selected barrels"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Distillery",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "text": "Hand-selected barrels"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Kentucky limestone water"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Traditional copper pot stills"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Aged to perfection"
          }
        }
      ]
    }
  ]
}
{% endschema %}
